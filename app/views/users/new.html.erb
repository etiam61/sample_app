<% provide :title, t(".page_title") %>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <h1><%= t ".heading" %></h1>
    <p><%= t ".intro" %></p>
    <%= form_for @user do |f| %>
      <%= render "shared/error_messages" %>
      <%= f.label :name, t(".label.name") %>
      <%= f.text_field :name, class: "form-item"  %>
      <%= f.label :email, t(".label.email") %>
      <%= f.email_field :email, class: "form-item"  %>
      <%= f.label :password, t(".label.password") %>
      <%= f.password_field :password, class: "form-item" %>
      <%= f.label :password_confirmation, t(".label.comfirmation") %>
      <%= f.password_field :password_confirmation, class: "form-item" %>
      <%= f.submit t(".button.submit"), class: "btn btn-success" %>
    <% end %>
  </div>
</div>
