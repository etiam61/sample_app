<% provide :title, t(".title") %>
<div class="page__login">
  <h1>
    <%= t ".heading" %>
  </h1>
  <%= form_for :sessions, url: login_path do |f| %>
    <%= f.label :email, t(".label.email") %>
    <%= f.email_field :email, class: "form-item" %>
    <%= f.label :password, t(".label.password") %>
    <%= link_to t(".forgot password"), new_password_reset_path %>
    <%= f.password_field :password, class: "form-item" %>
    <%= f.label :remember_me, class: "checkbox inline" do %>
      <%= f.check_box :remember_me %>
      <span><%= t ".remember_text" %></span>
     <% end %>
    <%= f.submit t(".button.login"), class: "btn btn-primary" %>
  <% end %>
  <br>
  <%= link_to t("static_page.home.sign_up") ,  new_user_path %>
</div>
