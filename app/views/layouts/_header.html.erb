<header class="navbar navbar-fixed-top navbar-inverse">
  <div id="logo">
    <%= link_to t(".logo"), "#" %>
  </div>
  <nav>
    <ul class="nav navbar-nav navbar-right nav-list">
      <li class="nav-item">
        <%= link_to t("static_pages.home.title"), root_path %>
      </li>
      <li class="nav-item">
        <%= link_to t("static_pages.help.title"), help_path %>
      </li>
      <% if logged_in? %>
        <li><%= link_to t(".user_title"), users_path %></li>
        <li class="dropdown">
          <%= link_to "#", class: "dropdown-toggle", "data-toggle" => "dropdown" do %>
            <%= t(".account") %> <b class="caret"></b>
          <% end %>
          <ul class="dropdown-menu">
            <li><%= link_to t("users.profile.title"), current_user %></li>
            <li><%= link_to t("users.settings.title"), "#" %></li>
            <li class="divider"></li>
            <li><%= link_to t("users.logout.title"), logout_path, method: :delete %></li>
          </ul>
        </li>
      <% else %>
        <li class="nav-item">
          <%= link_to t("users.login.title"), login_path %>
        </li>
      <% end %>
     
    </ul>
  </nav>
</header>
